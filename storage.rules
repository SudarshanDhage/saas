rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      // Allow users to upload and view their own profile images
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Project attachments
    match /users/{userId}/projects/{projectId}/{allFiles=**} {
      // Allow users to read their own project files
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow authenticated users to upload files with proper validations
      allow write: if request.auth != null && 
                    request.auth.uid == userId && 
                    request.resource.size < 5 * 1024 * 1024 && // 5MB max
                    request.resource.contentType.matches('image/.*|application/pdf|text/plain|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document');
    }
    
    // Public images that can be viewed by anyone
    match /public/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
                    request.resource.size < 5 * 1024 * 1024 && // 5MB max
                    request.resource.contentType.matches('image/.*');
    }
  }
} 